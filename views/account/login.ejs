<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <%- messages() %>
<form action="/" class="login-form">
  <label for="account_email">Email:</label>
  <input type="email" name="account_email" id="account_email" required />
  <br /><br />
  <label for="account_password">Password:</label>
  <input
    type="password"
    name="account_password"
    id="account_password"
    required
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
  />
  <div>
    <p>
      Password must meet the following requirements: be at least 12 characters
      long, at least 1 capital letter, 1 number, and 1 special character
    </p>
  </div>
  <span id="pswdBtn">Show Password</span>
  <button type="submit">Login</button>
  <p>No account? <a href="/account/register">Sign-up</a></p>
</form>
<script src="\js\script.js"></script>
